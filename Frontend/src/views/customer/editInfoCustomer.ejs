<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chỉnh sửa thông tin</title>
    <!-- Logo load -->
    <link
      rel="icon"
      href="/assets/image/logo/logo-load.png"
      type="image/icon type"
    />
    <!-- CSS -->
    <link rel="stylesheet" href="/assets/css/grid.css" />
    <link rel="stylesheet" href="/assets/css/home.css" />
    <!-- Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <!-- Icon -->
    <script
      src="https://kit.fontawesome.com/7b9d660613.js"
      crossorigin="anonymous"
    ></script>
    <!-- Notification -->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
  </head>
  <body>
    <!-- Header -->
    <%- include('../partials/headerCustomer')%>
    <!-- End Header -->

    <!-- Body content -->
    <div class="customerInfo">
      <div class="grid wide">
        <div class="row">
          <div class="col l-12">
            <div class="customerInfo__container">
              <h1 class="customerInfo__title">Thông tin liên lạc</h1>
              <div class="customerInfo__content">
                <div class="customerInfo__item">
                  <label for="username">Họ và tên</label>
                  <input
                    type="text"
                    id="username"
                    placeholder="Nhập họ tên"
                    value="<%= user.name %>"
                  />
                </div>
                <div class="customerInfo__item">
                  <label for="phonenumber">Điện thoại</label>
                  <input
                    type="text"
                    id="phonenumber"
                    placeholder="Nhập số điện thoại"
                    value="<%= user.phone_number%>"
                  />
                </div>
                <div class="customerInfo__item">
                  <label for="email">Email</label>
                  <input
                    type="email"
                    id="email"
                    placeholder="Nhập email"
                    value="<%= user.email%>"
                  />
                </div>
                <div class="customerInfo__item">
                  <label for="address">Địa chỉ</label>
                  <input
                    type="text"
                    id="address"
                    placeholder="Nhập địa chỉ"
                    value="<%= user.address%>"
                  />
                </div>
              </div>
              <div class="button-save-info">
                Lưu<span><i class="fa-solid fa-floppy-disk"></i></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Javascript -->
    <%- include('../partials/baseScriptFE')%>
    <script src="/js/components/headerLogin.js"></script>
    <script src="/js/customer/editInfoCustomer.js"></script>
  </body>
</html>
